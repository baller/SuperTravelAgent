    setMessages(prev => [...prev, userMessage]);
    setIsLoading(true);
    setInputValue('');

    try {
      // æ„å»ºè¯·æ±‚æ•°æ®
      const requestData = {
        type: 'chat',
        messages: [...messages, userMessage].map(msg => ({
          role: msg.role,
          content: msg.content,
          message_id: msg.id,
          type: msg.type || 'normal'
        })),
        use_deepthink: useDeepThink,
        use_multi_agent: useMultiAgent,
        selected_mcp_servers: selectedMcpServers
      };

      console.log('å‘é€è¯·æ±‚å‚æ•°:', {
        use_deepthink: useDeepThink,
        use_multi_agent: useMultiAgent,
        æ¶ˆæ¯æ•°é‡: requestData.messages.length
      });

      // å‘é€æµå¼è¯·æ±‚
      const response = await fetch('/api/chat-stream', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(requestData),
      });

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      // å¤„ç†æµå¼å“åº”
      const reader = response.body?.getReader();
      if (!reader) {
        throw new Error('æ— æ³•è·å–å“åº”æµ');
      }

      while (true) {
        const { done, value } = await reader.read();
        if (done) break;

        const chunk = new TextDecoder().decode(value);
        const lines = chunk.split('\n');

        for (const line of lines) {
          if (line.startsWith('data: ')) {
            try {
              const data = JSON.parse(line.slice(6));
              console.log('æ”¶åˆ°æµå¼æ•°æ®:', data);
              
              switch (data.type) {
                case 'chat_chunk':
                  handleMessageChunk(data);
                  break;
                case 'chat_complete':
                  setIsLoading(false);
                  console.log('èŠå¤©å®Œæˆ');
                  break;
                case 'error':
                  setIsLoading(false);
                  setMessages(prev => [...prev, {
                    id: uuidv4(),
